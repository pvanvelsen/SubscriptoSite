---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Coming Soon" description="Track your subscriptions and gain insights into your spending. Never lose track of what you're paying for.">
  <main class="min-h-screen flex flex-col items-center justify-center page-padding py-20 sm:py-24 lg:py-32">
    <div class="w-full max-w-5xl mx-auto content-padding">

      <!-- Hero Section -->
      <div class="text-center hero-spacing">
        <!-- Logo -->
        <div class="animate-fade-in logo-spacing">
          <Logo size="large" />
        </div>

        <!-- Coming Soon Badge -->
        <div class="flex justify-center badge-spacing">
          <div class="inline-flex items-center gap-3 px-8 py-4 rounded-full container-primary elevation-1">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="title-medium">Coming Soon</span>
          </div>
        </div>

        <!-- Tagline -->
        <h1 class="headline-large sm:display-small px-4 sm:px-8 heading-spacing">
          Track your subscriptions.<br class="hidden sm:block" /> Understand your spending.
        </h1>

        <!-- Description -->
        <p class="title-medium text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)] leading-relaxed description-content" style="max-width: 48rem; margin: 0 auto; padding: 0 2rem;">
          Get clear insights into all your subscriptions in one place. See what you're paying for, track your spending patterns, and never miss a renewal.
        </p>
      </div>

      <!-- Features Preview -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 features-spacing">
        <div class="surface elevation-2 rounded-3xl text-center hover:elevation-3 transition-all card-padding">
          <div class="feature-icon rounded-full bg-[var(--color-primary-container)] dark:bg-[var(--color-primary-container-dark)] flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-primary)] dark:text-[var(--color-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
          </div>
          <h3 class="title-large feature-title">Track Everything</h3>
          <p class="body-large text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)] leading-relaxed">
            Keep all your subscriptions organized in one simple dashboard
          </p>
        </div>

        <div class="surface elevation-2 rounded-3xl text-center hover:elevation-3 transition-all card-padding">
          <div class="feature-icon rounded-full bg-[var(--color-primary-container)] dark:bg-[var(--color-primary-container-dark)] flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-primary)] dark:text-[var(--color-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="title-large feature-title">Spending Insights</h3>
          <p class="body-large text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)] leading-relaxed">
            Understand your spending patterns with clear analytics and trends
          </p>
        </div>

        <div class="surface elevation-2 rounded-3xl text-center hover:elevation-3 transition-all card-padding">
          <div class="feature-icon rounded-full bg-[var(--color-primary-container)] dark:bg-[var(--color-primary-container-dark)] flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-primary)] dark:text-[var(--color-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
          <h3 class="title-large feature-title">Smart Reminders</h3>
          <p class="body-large text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)] leading-relaxed">
            Never miss a renewal with timely notifications
          </p>
        </div>
      </div>

      <!-- App Store Buttons (Hidden) -->
      <div class="app-links hidden flex flex-col sm:flex-row items-center justify-center gap-6 mb-20">
        <a
          href="#"
          aria-label="Download on the App Store"
          class="inline-block transition-transform hover:scale-105 active:scale-95"
        >
          <img
            src="/app-store-badge.svg"
            alt="Download on the App Store"
            width="180"
            height="60"
          />
        </a>
        <a
          href="#"
          aria-label="Get it on Google Play"
          class="inline-block transition-transform hover:scale-105 active:scale-95"
        >
          <img
            src="/google-play-badge.svg"
            alt="Get it on Google Play"
            width="180"
            height="60"
          />
        </a>
      </div>

      <!-- Footer -->
      <footer class="border-t border-[var(--color-outline-variant)] dark:border-[var(--color-outline-variant-dark)] text-center footer-spacing">
        <nav class="title-small text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)] flex items-center justify-center gap-8 footer-nav">
          <a
            href="/privacy"
            class="hover:text-[var(--color-primary)] dark:hover:text-[var(--color-primary-dark)] transition-colors"
          >
            Privacy Policy
          </a>
          <span class="text-[var(--color-outline)]">•</span>
          <a
            href="mailto:support@subscriptin.com"
            class="hover:text-[var(--color-primary)] dark:hover:text-[var(--color-primary-dark)] transition-colors"
          >
            Contact
          </a>
        </nav>
        <p class="body-medium text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
          © 2024 Subscriptin. All rights reserved.
        </p>
      </footer>
    </div>
  </main>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  /* Smooth transitions */
  a, button {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Page padding */
  .page-padding {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .content-padding {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 640px) {
    .page-padding {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .content-padding {
      padding-left: 0;
      padding-right: 0;
    }
  }

  @media (min-width: 1024px) {
    .page-padding {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }

  /* Desktop spacing (default) */
  .hero-spacing {
    margin-bottom: 8rem;
  }

  .logo-spacing {
    margin-bottom: 4rem;
  }

  .badge-spacing {
    margin-bottom: 3rem;
  }

  .heading-spacing {
    margin-bottom: 2rem;
  }

  .features-spacing {
    margin-bottom: 8rem;
  }

  .card-padding {
    padding: 3rem;
  }

  .feature-icon {
    width: 5rem;
    height: 5rem;
    margin: 0 auto 2rem;
  }

  .feature-title {
    margin-bottom: 1.5rem;
  }

  .footer-spacing {
    margin-top: 8rem;
    padding-top: 3rem;
  }

  .footer-nav {
    margin-bottom: 2rem;
  }

  /* Mobile spacing (640px and below) */
  @media (max-width: 640px) {
    .hero-spacing {
      margin-bottom: 4rem;
    }

    .logo-spacing {
      margin-bottom: 2.5rem;
    }

    .badge-spacing {
      margin-bottom: 2rem;
    }

    .heading-spacing {
      margin-bottom: 1.5rem;
    }

    .features-spacing {
      margin-bottom: 4rem;
    }

    .card-padding {
      padding: 2rem;
    }

    .feature-icon {
      width: 4rem;
      height: 4rem;
      margin-bottom: 1.5rem;
    }

    .feature-title {
      margin-bottom: 1rem;
    }

    .footer-spacing {
      margin-top: 4rem;
      padding-top: 2rem;
    }

    .footer-nav {
      margin-bottom: 1.5rem;
    }
  }

  /* Very small mobile (400px and below) */
  @media (max-width: 400px) {
    .hero-spacing {
      margin-bottom: 3rem;
    }

    .logo-spacing {
      margin-bottom: 2rem;
    }

    .badge-spacing {
      margin-bottom: 1.5rem;
    }

    .card-padding {
      padding: 1.5rem;
    }

    .feature-icon {
      width: 3.5rem;
      height: 3.5rem;
    }

    .footer-spacing {
      margin-top: 3rem;
    }
  }
</style>
