---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';
---

<BaseLayout title="Coming Soon" description="Family subscription tracking made simple. Track, manage, and optimize your household subscriptions together.">
  <main class="min-h-screen flex flex-col items-center justify-center px-6 py-12">
    <div class="max-w-2xl mx-auto text-center space-y-8">
      <!-- Logo -->
      <div class="animate-fade-in">
        <Logo size="large" />
      </div>

      <!-- Coming Soon Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-[var(--color-primary-container)] dark:bg-[var(--color-primary-container-dark)] text-[var(--color-on-primary-container)] dark:text-[var(--color-on-primary-container-dark)] text-sm font-medium">
        Coming Soon
      </div>

      <!-- Tagline -->
      <p class="text-xl md:text-2xl text-[var(--color-on-background)] dark:text-[var(--color-on-background-dark)] opacity-90">
        Family subscription tracking made simple
      </p>

      <!-- Description -->
      <p class="text-base md:text-lg text-[var(--color-on-background)] dark:text-[var(--color-on-background-dark)] opacity-70 max-w-xl mx-auto">
        Track, manage, and optimize your household subscriptions together. See what you're paying for, share costs fairly, and never forget another renewal.
      </p>

      <!-- App Store Buttons (Hidden) -->
      <div class="app-links hidden space-y-4 md:space-y-0 md:space-x-4">
        <a
          href="#"
          aria-label="Download on the App Store"
          class="inline-block transition-transform hover:scale-105"
        >
          <img
            src="/app-store-badge.svg"
            alt="Download on the App Store"
            width="160"
            height="53"
          />
        </a>
        <a
          href="#"
          aria-label="Get it on Google Play"
          class="inline-block transition-transform hover:scale-105"
        >
          <img
            src="/google-play-badge.svg"
            alt="Get it on Google Play"
            width="160"
            height="53"
          />
        </a>
      </div>

      <!-- Footer -->
      <footer class="pt-12 text-sm text-[var(--color-on-background)] dark:text-[var(--color-on-background-dark)] opacity-60">
        <p>
          <a
            href="/privacy"
            class="hover:text-[var(--color-primary)] dark:hover:text-[var(--color-primary-dark)] transition-colors underline"
          >
            Privacy Policy
          </a>
          {' • '}
          <a
            href="mailto:hello@subscripto.io"
            class="hover:text-[var(--color-primary)] dark:hover:text-[var(--color-primary-dark)] transition-colors underline"
          >
            Contact
          </a>
        </p>
        <p class="mt-2">
          © 2024 Subscripto. All rights reserved.
        </p>
      </footer>
    </div>
  </main>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }
</style>
