---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';

// Get query parameters from Supabase redirect
const url = Astro.url;
const token = url.searchParams.get('token');
const type = url.searchParams.get('type');
const error = url.searchParams.get('error');
const errorDescription = url.searchParams.get('error_description');

const isSuccess = !error && token;
const isError = !!error;
---

<BaseLayout
  title={isSuccess ? 'Email Verified' : 'Verification Failed'}
  description="Email verification for Subscripto account"
>
  <div class="min-h-screen flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8 py-16">
    <div class="w-full max-w-md mx-auto">

      <!-- Logo -->
      <div class="text-center mb-8">
        <Logo size="medium" />
      </div>

      {isSuccess ? (
        <!-- Success State -->
        <div class="surface elevation-2 rounded-3xl p-8 space-y-6 text-center">
          <!-- Success Icon -->
          <div class="flex justify-center">
            <div class="w-20 h-20 rounded-full bg-[var(--color-secondary)] dark:bg-[var(--color-secondary-dark)] flex items-center justify-center elevation-1">
              <svg
                class="w-12 h-12 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="3"
                  d="M5 13l4 4L19 7"
                />
              </svg>
            </div>
          </div>

          <!-- Success Message -->
          <div class="space-y-3">
            <h1 class="headline-small">
              Email Verified!
            </h1>
            <p class="body-large text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              Your email has been successfully confirmed.
            </p>
          </div>

          <!-- Instructions -->
          <div class="space-y-4 pt-4">
            <p class="body-medium text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              You can now close this page and return to the Subscripto app to continue setting up your account.
            </p>

            <!-- Open App Button -->
            <button
              id="openAppBtn"
              class="w-full px-6 py-4 bg-[var(--color-primary)] dark:bg-[var(--color-primary-dark)] text-white rounded-full font-medium hover:opacity-90 transition-all elevation-1 hover:elevation-2 flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Open Subscripto App
            </button>

            <!-- Fallback Link -->
            <p class="body-small text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              App not installed?{' '}
              <a
                href="/"
                class="text-[var(--color-primary)] dark:text-[var(--color-primary-dark)] hover:underline font-medium"
              >
                Download here
              </a>
            </p>
          </div>
        </div>
      ) : (
        <!-- Error State -->
        <div class="surface elevation-2 rounded-3xl p-8 space-y-6 text-center">
          <!-- Error Icon -->
          <div class="flex justify-center">
            <div class="w-20 h-20 rounded-full bg-[var(--color-error)] dark:bg-[var(--color-error-dark)] flex items-center justify-center elevation-1">
              <svg
                class="w-12 h-12 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                />
              </svg>
            </div>
          </div>

          <!-- Error Message -->
          <div class="space-y-3">
            <h1 class="headline-small">
              Verification Failed
            </h1>
            <p class="body-large text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              {errorDescription || error || 'Something went wrong. Please try again.'}
            </p>
          </div>

          <!-- Error Actions -->
          <div class="space-y-4 pt-4">
            <p class="body-medium text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              This verification link may have expired or already been used.
            </p>

            <a
              href="/"
              class="inline-flex items-center justify-center w-full px-6 py-4 bg-[var(--color-primary)] dark:bg-[var(--color-primary-dark)] text-white rounded-full font-medium hover:opacity-90 transition-all elevation-1 hover:elevation-2 gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Return to Home
            </a>

            <p class="body-small text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
              Need help?{' '}
              <a
                href="mailto:hello@subscripto.io"
                class="text-[var(--color-primary)] dark:text-[var(--color-primary-dark)] hover:underline font-medium"
              >
                Contact support
              </a>
            </p>
          </div>
        </div>
      )}

      <!-- Footer -->
      <footer class="pt-12 text-center">
        <p class="body-small text-[var(--color-on-surface-variant)] dark:text-[var(--color-on-surface-variant-dark)]">
          Â© 2024 Subscripto. All rights reserved.
        </p>
      </footer>
    </div>
  </div>
</BaseLayout>

<script define:vars={{ isSuccess, token }}>
  if (isSuccess) {
    const openAppBtn = document.getElementById('openAppBtn');
    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

    // Handle app opening
    function openApp() {
      const deepLink = `subscripto://verify?token=${encodeURIComponent(token || '')}`;

      // Attempt to open the app
      window.location.href = deepLink;

      // Fallback: If app doesn't open after 2 seconds, redirect to home/app store
      if (isMobile) {
        setTimeout(() => {
          if (document.visibilityState === 'visible') {
            // App didn't open, redirect to home page
            window.location.href = '/';
          }
        }, 2000);
      }
    }

    // Add click handler to button
    if (openAppBtn) {
      openAppBtn.addEventListener('click', openApp);
    }

    // Auto-open app after 3 seconds on mobile
    if (isMobile) {
      setTimeout(() => {
        openApp();
      }, 3000);
    }
  }
</script>
